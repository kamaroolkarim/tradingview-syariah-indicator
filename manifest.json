{
  "manifest_version": 2,
  "version": "1.4.3",
  "default_locale": "en",
  "author": "Azriz Haziq Jasni",
  "name": "__MSG_ext_extension_name__",
  "description": "__MSG_ext_extension_description__",
  "homepage_url": "https://github.com/AzrizHaziq/tradingview-syariah-indicator",
  "background": {
    "page": "src/bg/bg.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.tradingview.com/chart/*",
        "*://*.tradingview.com/screener/*",
        "*://*.tradingview.com/symbols/*"
      ],
      "js": [
        "src/browser-polyfill.js",
        "src/page/main.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "*://*.tradingview.com/*"
  ],
  "web_accessible_resources": [
    "src/browser-polyfill.js",
    "src/helper.js",
    "src/**/*.js"
  ],
  "icons": {
    "16": "./assets/shariah-icon-16.png",
    "48": "./assets/shariah-icon-48.png",
    "128": "./assets/shariah-icon-128.png"
  },
  "browser_action": {
    "default_title": "__MSG_ext_extension_name__",
    "browser_style": true,
    "default_icon": {
      "16": "./assets/shariah-icon-16.png",
      "48": "./assets/shariah-icon-48.png"
    },
    "default_popup": "src/popup/popup.html"
  },
  "content_security_policy": "script-src 'self'; img-src 'self'; style-src 'self'; connect-src 'self' https://raw.githubusercontent.com/AzrizHaziq/tradingview-syariah-indicator/master/stock-list.json; object-src 'self'; default-src 'self'"
}
